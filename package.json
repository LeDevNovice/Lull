{
  "name": "lull",
  "version": "1.0.0",
  "description": "Audio normalizer for streaming platforms",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r assets dist/ && cp manifest.json dist/ && cp -r src/popup/*.html src/popup/*.css dist/popup/",
    "package": "npm run build && cd dist && zip -r ../lull-extension.zip ."
  },
  "keywords": [
    "chrome-extension",
    "audio",
    "normalizer",
    "streaming",
    "netflix",
    "youtube"
  ],
  "author": "LeDevNovice",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.1.22",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LeDevNovice/Lull.git"
  }
}
